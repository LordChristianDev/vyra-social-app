  "type": "commonjs",
  "scripts": {
    "server": "nodemon --exec ts-node -r tsconfig-paths/register --transpile-only src/app.ts",
    "client": "npm run dev --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "tsc && tsc-alias",
    "build:client": "cd client && npm run build",
    "start": "node dist/src/app.js",
    "deploy": "npm run build && npm run build:client && npm start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "push": "npx drizzle-kit push"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^14.0.0",
    "@neondatabase/serverless": "^1.0.2",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "koa": "^3.0.1",
    "koa-bodyparser": "^4.4.1",
    "koa-send": "^5.0.1",
    "koa-static": "^5.0.0"
  },
  "devDependencies": {
    "@types/koa": "^3.0.0",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-send": "^4.1.6",
    "@types/koa-static": "^4.0.4",
    "@types/node": "^24.7.0",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.5",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
